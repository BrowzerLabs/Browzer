{
  "name": "browzer",
  "productName": "Browzer",
  "version": "1.0.0",
  "description": "AI-powered browser with agent-based capabilities",
  "main": "dist/src/main/main.js",
  "homepage": "https://github.com/your-username/browzer",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "scripts": {
    "dev": "npx webpack --config webpack.renderer.config.js && npx tsc && node scripts/copy-python-files.js && electron .",
    "start": "electron .",
    "setup": "cd agents && chmod +x setup.sh && ./setup.sh",
    "setup-win": "cd agents && .\\setup.bat",
    "postinstall": "echo \"Run 'npm run setup' to set up Python agents\"",
    "prepare-python": "./scripts/prepare-python-bundle.sh",
    "copy-python": "node scripts/copy-python-files.js",
    "prebuild": "npm run prepare-python",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --linux --win",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "rebuild": "electron-rebuild"
  },
  "build": {
    "appId": "com.browzer.app",
    "productName": "Browzer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "styles.css",
      "history.html",
      "agents/**/*",
      "node_modules/**/*",
      "!node_modules/*/{README.md,readme.md,CHANGELOG.md,changelog.md}",
      "!agents/venv/**/*",
      "!**/*.pyc",
      "!**/__pycache__",
      "!agents/.env"
    ],
    "extraFiles": [
      {
        "from": "agents",
        "to": "Resources/agents",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!.env",
          "!**/*.pyc",
          "!**/__pycache__"
        ]
      },
      {
        "from": "python-bundle/python-runtime",
        "to": "Resources/python-runtime",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "category": "Network",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Browzer"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "axios": "^1.6.0"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "html-webpack-plugin": "^5.5.0"
  }
}
