{
  "name": "browzer",
  "productName": "Browzer",
  "version": "1.0.0",
  "description": "AI-powered browser with agent-based capabilities",
  "main": "dist/main/main/main.js",
  "homepage": "https://github.com/your-username/browzer",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:clean && npm run build:main && npm run build:renderer && npm run build:preload",
    "build:clean": "rimraf dist",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:preload": "tsc -p src/preload/tsconfig.json",
    "build:watch": "concurrently \"npm run build:main -- --watch\" \"npm run build:renderer -- --watch\" \"npm run build:preload -- --watch\"",
    "electron:dev": "wait-on dist/main/main/main.js && electron .",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "setup": "cd agents && chmod +x setup.sh && ./setup.sh",
    "setup-win": "cd agents && .\\setup.bat",
    "postinstall": "echo \"Run 'npm run setup' to set up Python agents\"",
    "prepare-python": "./scripts/prepare-python-bundle.sh",
    "prebuild": "npm run prepare-python"
  },
  "build": {
    "appId": "com.browzer.app",
    "productName": "Browzer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "styles.css",
      "history.html",
      "agents/**/*",
      "node_modules/**/*",
      "!node_modules/*/{README.md,readme.md,CHANGELOG.md,changelog.md}",
      "!agents/venv/**/*",
      "!**/*.pyc",
      "!**/__pycache__",
      "!agents/.env"
    ],
    "extraFiles": [
      {
        "from": "agents",
        "to": "Resources/agents",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!.env",
          "!**/*.pyc",
          "!**/__pycache__"
        ]
      },
      {
        "from": "python-bundle/python-runtime",
        "to": "Resources/python-runtime",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "category": "Network",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Browzer"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.10"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.3",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "css-loader": "^6.8.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
